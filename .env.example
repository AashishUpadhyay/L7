# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=postgres

# Storage Configuration
# Backend: "local", "s3", or "gcs" (s3 and gcs not yet implemented)
STORAGE_BACKEND=local

# Local Storage Settings (when STORAGE_BACKEND=local)
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=/static/uploads

# AWS S3 Settings (for future use when STORAGE_BACKEND=s3)
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Google Cloud Storage Settings (for future use when STORAGE_BACKEND=gcs)
# GCS_BUCKET=your-bucket-name
# GCS_CREDENTIALS_PATH=/path/to/credentials.json
